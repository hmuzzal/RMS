@using IdentityModel.Client
@using IdentityServer4.Extensions
@model LoginViewModel

<link href="~/css/login.css" rel="stylesheet" />

@if (Context.User.IsAuthenticated())
{
    Context.Response.Redirect("/");
}


else
{
    {
        Layout = "_LogInLayout";
    }

    {
        ViewData["Title"] = "Login";
    }


    <div class="login-page">
        <partial name="_ValidationSummary" />
        <div class="row">
            @if (Model.EnableLocalLogin)
            {
                <div class="col-sm-4 border login-main">
                    <div class="">
                        <div class="">
                            <h3 class="text-center text-color">
                                <img src="~/images/log-img.jpg" class=" login-background log-img" />
                                Login
                            </h3>
                        </div>
                        <div class="">
                            <form asp-route="Login" class="submit-allow">
                                <input type="hidden" asp-for="ReturnUrl" />

                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control p-input" placeholder="Username" asp-for="Username" autofocus>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control p-input" placeholder="Password" asp-for="Password" autocomplete="off">
                                    </div>
                                    @if (Model.AllowRememberLogin)
                                    {
                                        <div class="form-group login-remember">
                                            <label asp-for="RememberLogin">
                                                <input asp-for="RememberLogin">
                                                <strong class="text-color">Remember My Login</strong>
                                            </label>
                                        </div>
                                    }

                                    <div class="form-group">
                                        <button class="btn btn-primary btn-size p-2" name="button" value="login">Login</button>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

}